{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "./", // Asegura que las rutas sean relativas a la ra√≠z del proyecto
    "paths": {
      "@hitss/*": ["Backend/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.test.ts"],
  "exclude": ["node_modules"]
}

